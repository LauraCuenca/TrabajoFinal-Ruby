# Temporary files generated by text editors or OS
# Belong in git's global ignore configuration.

# Ignore bundler config
.bundle

# Ignore environment files
.env*
.env*.local

# Rails logs and temp files
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# PID files
/tmp/pids/*
!/tmp/pids/
!/tmp/pids/.keep

# Storage files
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/
!/tmp/storage/.keep

# Uploaded files in development
/public/uploads

# Public assets
/public/assets
/public/packs
/public/packs-test
/public/system

# Ignore SQLite databases
/db/*.sqlite3
/db/*.sqlite3-journal
/db/*.sqlite3-[0-9]*

# Rails master key
/config/master.key

# Coverage and testing files
/coverage/
.rspec
/spec/tmp

# Other generated files
*.orig
rerun.txt
*.rbc
capybara-*.html
pickle-email-*.html
.byebug_history

# Yarn and Node.js files
node_modules/
/yarn-error.log
yarn-debug.log*
.yarn-integrity

# Bower components (if applicable)
/vendor/assets/bower_components
*.bowerrc
bower.json

# Bundler vendor folder
/vendor/bundle

# Pow environment settings
.powenv

# RVM configurations
.rvmrc
